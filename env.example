# Application Settings
DEBUG=false
APP_NAME="Link Ingestor"

# Database Configuration
DATABASE_URL=postgresql+asyncpg://linkuser:linkpass@localhost:5432/link_ingestor

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# HTTP Client Settings
HTTP_TIMEOUT=30
HTTP_MAX_RETRIES=3
USER_AGENT="LinkIngestor/1.0"

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Backlink Settings
MAX_BACKLINKS_PER_LINK=10

# Search Provider API Keys
BING_API_KEY=your_bing_api_key_here

# Optional: S3 for HTML snapshots
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET=link-ingestor-snapshots


